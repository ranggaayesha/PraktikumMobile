<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.ranggaayesha_1202151233_modul2.DineIn">

    <LinearLayout
        android:id="@+id/ll_detailcustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Customer:"
            android:layout_marginTop="@dimen/margin_top_logo"
            android:textSize="@dimen/text_size_head"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:id="@+id/et_DineInName"
            android:layout_width="@dimen/width_editText"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"

            android:hint="Name"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_detailcustomer"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Meja:"/>
        <Spinner
            android:id="@+id/spinner_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_table"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_logo">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="PILIH PESANAN"
            android:padding="@dimen/padding_button"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:onClick="onClickOrder"/>
    </LinearLayout>
</RelativeLayout>
